@model IEnumerable<UrunImageModel>
@{
    ViewData["Title"] = "Ürün Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-3">
    <h2>Ürün Listesi</h2>
    <hr />
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Resim</th>
                            <th>Başlık</th>
                            <th>Gösterilme Sayisi</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Urun.UrunId</th>
                                <th>
                                    <img src="@item.Images[0].ImageUrl" width="100" />
                                </th>
                                <th>@item.Urun.UrunBaslik</th>
                                <th>@item.Urun.GozukmeSayisi</th>
                                <th>
                                    <a class="btn btn-primary btn-sm"  asp-action="UrunDuzenle" asp-route-id="@item.Urun.UrunId">
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm"  asp-action="UrunSil" asp-route-id="@item.Urun.UrunId">
                                        Sil
                                    </a>
                                </th>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Ürün Eklenmemiş
                </div>
            }
        </div>
    </div>
    <br />
    <a class="btn btn-success" asp-action="UrunEkle">Ürün Ekle</a>
</div>
