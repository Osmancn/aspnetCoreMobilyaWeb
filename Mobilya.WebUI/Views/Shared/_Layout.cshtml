<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @RenderSection("Head", false)
</head>
<body>
    <div class="super_container">

        <header class="header">

            <div class="top_bar">
                <div class="container">
                    <div class="row">
                        <div class="col d-flex flex-row">
                            <div class="top_bar_contact_item ml-auto">
                                <div class="top_bar_icon">
                                    <div style="color:#0e8ce4; font-size:25px;">
                                        <i class="fas fa-mobile-alt"></i>
                                    </div>
                                </div>
                                @await Component.InvokeAsync("Telefon")
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="header_main">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-4 col-sm-3 col-3 order-1">
                            <div class="logo_container">
                                <div class="logo"><a asp-controller="Home" asp-action="Index">NaimMobilya</a></div>
                            </div>
                        </div>

                        @await Component.InvokeAsync("Search")

                    </div>
                </div>
            </div>

            <nav class="main_nav">
                <div class="container">
                    <div class="row">
                        <div class="col">

                            <div class="main_nav_content d-flex flex-row">

                                <!-- Categories Menu -->

                                @await Component.InvokeAsync("KategoriMenu")

                                <!-- Main Nav Menu -->

                                <div class="main_nav_menu ml-auto">
                                    <ul class="standard_dropdown main_nav_dropdown">
                                        <li><a asp-controller="Home" asp-action="Index">Ana Sayfa<i class="fas fa-chevron-down"></i></a></li>
                                        <li><a asp-controller="Dukkan" asp-action="OzelUrun">Özel Ürün<i class="fas fa-chevron-down"></i></a></li>
                                        <li><a asp-controller="Dukkan" asp-action="Iletisim">Mağazalarımız<i class="fas fa-chevron-down"></i></a></li>
                                        <li><a asp-controller="Dukkan" asp-action="Hakkimizda">Hakkımızda<i class="fas fa-chevron-down"></i></a></li>
                                        <li><a asp-controller="Dukkan" asp-action="Iletisim">İletişim<i class="fas fa-chevron-down"></i></a></li>
                                    </ul>
                                </div>

                                <!-- Menu Trigger -->

                                <div class="menu_trigger_container ml-auto">
                                    <div class="menu_trigger d-flex flex-row align-items-center justify-content-end">
                                        <div class="menu_burger">
                                            <div class="menu_trigger_text">menu</div>
                                            <div class="cat_burger menu_burger_inner"><span></span><span></span><span></span></div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="page_menu">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="page_menu_content">

                                <div class="page_menu_search">
                                    <form action="#">
                                        <input type="search" required="required" class="page_menu_search_input" placeholder="Ürün Ara...">
                                    </form>
                                </div>

                                <ul class="page_menu_nav">
                                    <li class="page_menu_item">
                                        <a asp-controller="Home" asp-action="Index">
                                            Ana Sayfa<i class="fa fa-angle-down"></i>
                                        </a>
                                    </li>
                                    <li class="page_menu_item">
                                        <a asp-controller="Dukkan" asp-action="OzelUrun">
                                            Özel Ürün<i class="fa fa-angle-down"></i>
                                        </a>
                                    </li>
                                    <li class="page_menu_item">
                                        <a asp-controller="Dukkan" asp-action="Iletisim">
                                            Mağazalarımız<i class="fa fa-angle-down"></i>
                                        </a>
                                    </li>
                                    <li class="page_menu_item">
                                        <a asp-controller="Dukkan" asp-action="Hakkimizda">
                                            Hakkımızda<i class="fa fa-angle-down"></i>
                                        </a>
                                    </li>
                                    <li class="page_menu_item">
                                        <a asp-controller="Dukkan" asp-action="Iletisim">
                                            İletişim<i class="fa fa-angle-down"></i>
                                        </a>
                                    </li>
                                </ul>

                                <div class="menu_contact">
                                    <div class="menu_contact_item">
                                        <div class="menu_contact_icon">
                                            <div style="color:white; font-size:25px;">
                                                <i class="fas fa-mobile-alt"></i>
                                            </div>
                                        </div>
                                        @await Component.InvokeAsync("Telefon")
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div>
            @RenderBody()
        </div>

        <div class="newsletter p-2"> @*çizgi*@</div>

        <footer class="footer">
            <div class="container">
                <div class="row">

                <div class="col-lg-3 footer_col">
                        <div class="footer_column footer_contact">
                            <div class="logo_container">
                                <div class="logo">
                                    <a asp-controller="Home" asp-action="Index">NaimMobilya</a>
                                </div>
                            </div>
                            <div class="footer_title">Tüm Sorular için 7/24 İletişim</div>
                            <div class="footer_phone">
                                @await Component.InvokeAsync("Telefon")
                        </div>
                        <div class="footer_contact_text">
                            @await Component.InvokeAsync("Adres")
                        </div>
                        <div class="footer_social">
                            <ul>
                                <li><a href=""><i class="fab fa-facebook-f"></i></a></li>
                                <li><a href=""><i class="fab fa-twitter"></i></a></li>
                                <li><a href=""><i class="fab fa-youtube"></i></a></li>
                                <li><a href=""><i class="fab fa-google"></i></a></li>
                                <li><a href=""><i class="fab fa-vimeo-v"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 offset-lg-2">
                    <div class="footer_column">
                        <div class="footer_title">Hızlı Ara</div>
                        <ul class="footer_list">
                            @await Component.InvokeAsync("KategoriForShop")
                        </ul>
                    </div>
                </div>

                <div class="col-lg-2"></div>

                <div class="col-lg-2">
                    <div class="footer_column">
                        <div class="footer_title">Menü</div>
                        <ul class="footer_list">
                            <li>
                                <a asp-controller="Home" asp-action="Index">
                                    Ana Sayfa
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Dukkan" asp-action="OzelUrun">
                                    Özel Ürün
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Dukkan" asp-action="Iletisim">
                                    Mağazalarımız
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Dukkan" asp-action="Iletisim">
                                    Hakkımızda
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Dukkan" asp-action="Iletisim">
                                    İletişim
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </footer>

</div>

@RenderSection("Scripts", false)

</body>
</html>
