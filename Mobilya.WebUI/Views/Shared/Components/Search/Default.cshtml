@model IEnumerable<Kategori>

<div class="col-lg-6 col-12 order-lg-2 order-3 text-lg-left text-right">
    <div class="header_search">
        <div class="header_search_content">
            <div class="header_search_form_container">
                <form action="#" class="header_search_form clearfix">
                    <input type="search" required="required" class="header_search_input" placeholder="Urun Arama...">
                    <div class="custom_dropdown">
                        <div class="custom_dropdown_list">
                            <span class="custom_dropdown_placeholder clc">Tüm Kategoriler</span>
                            <i class="fas fa-chevron-down"></i>
                            <ul class="custom_list clc">
                                <li><a class="clc" asp-controller="Home" asp-action="Kategori">Tüm Kategoriler</a></li>
                                @foreach (var item in Model)
                                {
                                    <li>
                                        <a class="clc" a asp-controller="Home" asp-action="Kategori" asp-route-id="@item.KategoriId">
                                            @item.KategoriAd
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <button type="submit" class="header_search_button trans_300" value="Submit">
                        <i class="fas fa-search" style="color:white;"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>