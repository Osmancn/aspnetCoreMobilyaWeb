@model IEnumerable<Kategori>
<div class="cat_menu_container">
    <div class="cat_menu_title d-flex flex-row align-items-center justify-content-start">
        <div class="cat_burger"><span></span><span></span><span></span></div>
        <div class="cat_menu_text">Kategori</div>
    </div>

    <ul class="cat_menu">
        <li><a asp-controller="Home" asp-action="Kategori" asp-route-id="0">Tüm Kategoriler <i class="fas fa-chevron-right ml-auto"></i></a></li>
        @foreach (var item in Model)
        {
            <li><a asp-controller="Home" asp-action="Kategori" asp-route-id="@item.KategoriId">
                @item.KategoriAd<i class="fas fa-chevron-right"></i></a></li>

        }
    </ul>
</div>